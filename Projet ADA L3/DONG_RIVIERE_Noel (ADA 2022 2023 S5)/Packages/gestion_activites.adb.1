      PROCEDURE Affichage_Dispo (Nbr_Place: IN OUT T_Gestion_Activite) IS

      BEGIN

         FOR I IN T_Semaine'RANGE LOOP
            FOR J IN T_Activite'RANGE LOOP
               IF Nbr_Place(I,J)<=0 THEN Put (T_Activite'Image(J)); Put("plus de disponibilite pour: "); Put(T_Semaine'Image(I)); New_Line;
               ELSE Put(T_Activite'Image(J)); Put("les jours où il y a des disponibilites sont:"); Put(T_Semaine'Image(I)); Put("le nombre de place restantes sont: "); Put(Nbr_Place(I,J)); New_Line;
               END IF;
            END LOOP;
         END LOOP;
      END Affichage_Dispo;




