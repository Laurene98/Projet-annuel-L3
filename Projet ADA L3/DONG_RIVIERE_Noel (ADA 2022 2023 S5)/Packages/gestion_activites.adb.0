   --------------------------Affichage de place disponible ------------------------------------

      PROCEDURE Affichage_Dispo (Nbr_Place: IN OUT T_Gestion_Activite) IS
      BEGIN

         Initial_Act (Nbr_Place);

         FOR I IN T_Semaine'RANGE LOOP
            FOR J IN T_Activite'RANGE LOOP
               EXIT WHEN I = Samedi;
               EXIT WHEN I = Dimanche;
               IF Nbr_Place(I,J)= 0 THEN
                  Put("Plus de disponibilite pour ");
                  Put (T_Activite'Image(J));
                  Put(" le "); Put(T_Semaine'Image(I)); New_Line;
               ELSE
                  Put("Pour ");
                  Put(T_Activite'Image(J));
                  Put(" les jours ou il y a des disponibilites sont: ");
                  Put(T_Semaine'Image(I));
                  Put_Line(".");
                  Put("Le nombre de place restantes sont: ");
                  Put(Nbr_Place(I,J)); New_Line;
               END IF;
            END LOOP;
         END LOOP;
      END Affichage_Dispo;

