   BEGIN
      IF Liste /= NULL THEN
         IF Liste.Bs.Quitte THEN
            Put(Liste.Bs.Nom); Put(Liste.Bs.Prenom1);
            IF Liste.Bs.Prenom2(1..2) /= "  " THEN
               Put(Liste.Bs.Prenom2);
